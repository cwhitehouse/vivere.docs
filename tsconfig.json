{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [ "dom", "esnext", "esnext.array" ],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "rootDir": ".",
    "strict": false,
    "target": "es6",
    "noEmit": true,
    "removeComments": true,
  },
  "exclude": [
    "dist",
    "temp",
    "src/includes"
  ]
}
