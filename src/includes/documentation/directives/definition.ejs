<div
  id="<%= directive.name %>"
  class="definition font-mono text-gray-500 dark:text-gray-400"
>
  <p class="text-2xl">
    <span class="text-indigo-600 dark:text-indigo-400"><%= directive.name %></span><% if (!!directive.key) { %><span>:</span><span class="text-pink-600 dark:text-pink-400">{<%= directive.key.name %>}</span><% if (!!directive.modifier) { %><span>.</span><span class="text-pink-600 dark:text-pink-400">{<%= directive.modifier.name %>}</span><% } %><% } %><% if (!!directive.value) { %><span>=</span><span>"<span class="text-pink-600 dark:text-pink-400">{<%= directive.value.name %>}</span>"</span><% } %>
  </p>
  <div class="space-y-6 p-4 bg-indigo-50 dark:bg-gray-800 rounded mt-4 mb-6">
    <% ['key', 'modifier', 'value'].forEach((part) => { %>
      <% if (!!directive[part]) { %>
        <div>
          <p>
            <span class="text-pink-600 dark:text-pink-400">{<%= directive[part].name %>}</span>:
            <% const types = directive[part].types %>
            <% if (types.length > 1) { %>
              (<% types.forEach((type, idx) => { const color = type.startsWith("'") ? 'text-orange-600 dark:text-orange-300' : 'text-purple-600 dark:text-purple-400'; %><%= idx === 0 ? null : ', ' %><span class="<%= color %>"><%= type %></span><% }); %>)
            <% } else { %>
              <span class="text-purple-600 dark:text-purple-400"><%= types[0] %></span>
            <% } %>
          </p>
          <p class="font-sans text-gray-800 dark:text-gray-200 mt-2"><%= directive[part].description %></p>
        </div>
      <% } %>
    <% }); %>
  </div>
</div>
