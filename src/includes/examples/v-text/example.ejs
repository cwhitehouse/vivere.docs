<div
  v-component
  v-data:text="something"
  v-data:toggle="false"
  class="space-y-6"
>
  <p class="text-center">I
    <span
      v-text="toggle ? 'hate' : 'love'"
      class="italic semibold"
    ></span>
    <span v-text="text"></span>.
  </p>
  <div class="flex items-center space-x-4">
    <input
      type="text"
      v-sync="text"
      class="flex-1"
    >
    <button
      v-event:click="toggle = !toggle"
      class="button"
    >Toggle Feelings</button>
  </div>

</div>
