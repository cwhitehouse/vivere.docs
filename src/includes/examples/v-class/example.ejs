<!--
  TAILWIND
  text-indigo-600
  italic
  text-red-600
  dark:text-indigo-400
  dark:text-red-400
-->

<div
  v-component
  v-data:blue="true"
  class="p-6 flex items-center"
>
  <button
    v-event:click="blue = !blue"
    class="button"
  >Toggle Classes</button>
  <p
    v-class:text-indigo-600="blue"
    v-class:italic="blue"
    v-class:text-red-600="!blue"
    v-class:dark:text-indigo-400="blue"
    v-class:dark:text-red-400="!blue"
    class="ml-4"
  >This is a blue message...</p>
</div>
