<div class="flex flex-col items-stretch">
  <div
    class="flex items-stretch"
    v-component
    v-store:session-count.session="0"
    v-store:local-count.local="0"
  >
    <div class="flex-1 flex flex-col items-center w-0">
      <p class="font-medium">Session Count</p>
      <div class="flex items-center space-x-8 mt-8">
        <button
          class="button"
          v-event:click="sessionCount -= 1"
        >-</button>
        <p
          v-text="sessionCount"
          class="w-8 text-center"
        >0</p>
        <button
          class="button"
          v-event:click="sessionCount += 1"
        >+</button>
      </div>
    </div>
    <div class="flex-1 flex flex-col items-center  w-0">
      <p class="font-medium">Local Count</p>
      <div class="flex items-center space-x-8 mt-8">
        <button
          class="button"
          v-event:click="localCount -= 1"
        >-</button>
        <p
          v-text="localCount"
          class="w-8 text-center"
        >0</p>
        <button
          class="button"
          v-event:click="localCount += 1"
        >+</button>
      </div>
    </div>
  </div>
  <p class="italic text-gray-700 dark:text-gray-400 mt-8 text-center">Try refreshing the page or opening it in a new window!</p>
</div>
